@model IEnumerable<WebXeXin.Models.Category>
@{
    ViewData["Title"] = "Danh Mục Sản Phẩm";
}
<h2>Danh Mục Sản Phẩm</h2>
<p>
    <a asp-action="Add" class="btn btn-primary">Thêm Danh Mục</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tên Danh Mục</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@category.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
