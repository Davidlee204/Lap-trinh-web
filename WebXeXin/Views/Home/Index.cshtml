@{
    ViewData["Title"] = "Home Page";
}

<div id="jumbotronCarousel" class="jumbotron carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/porsche.jpg" class="d-block w-100" alt="Porsche">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4"><strong>Chào mừng đến với Thế Giới Xế Xịn</strong></h1>
                <p class="lead"><strong>Khám phá các dòng xe sang trọng và đẳng cấp.</strong></p>
                <hr class="my-4">
                <p>Chúng tôi cung cấp các dòng xe tốt nhất với dịch vụ hoàn hảo.</p>
                <a class="btn btn-primary btn-lg" href="#" role="button">Tìm hiểu thêm</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Lexus-index-home.jpg" class="d-block w-100" alt="Lexus">
            
        </div>
        <div class="carousel-item">
            <img src="~/images/Mercedes-01.jpg" class="d-block w-100" alt="Mercedes">
            
        </div>
		<div class="carousel-item">
			<img src="~/images/IMG_9252.jpeg" class="d-block w-100" alt="BMW">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#jumbotronCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#jumbotronCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/images/Mercedes.jpg" class="card-img-top" alt="Xe Mới">
                <div class="card-body">
                    <h5 class="card-title">Xe Mới</h5>
                    <p class="card-text">Khám phá các mẫu xe mới nhất của chúng tôi.</p>
                    <a href="#" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/images/rolls-royce.jpeg" class="card-img-top" alt="Xe Cũ">
                <div class="card-body">
                    <h5 class="card-title">Xe Cũ</h5>
                    <p class="card-text">Khám phá các mẫu xe cũ chất lượng cao.</p>
                    <a href="#" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/images/Dich-Vu.jpg" class="card-img-top" alt="Dịch Vụ">
                <div class="card-body">
                    <h5 class="card-title">Dịch Vụ</h5>
                    <p class="card-text">Chúng tôi cung cấp các dịch vụ bảo dưỡng và sửa chữa chuyên nghiệp.</p>
                    <a href="#" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="hero-image">
    <img src="~/images/RR.jpg" alt="RR" class="img-fluid">
    <div class="hero-text">
        <h1>SENSE VIETNAM</h1>
        <p>by Lexus</p>
        <a href="#" class="btn btn-primary">KHÁM PHÁ NGAY</a>
    </div>
</div>